{
  "manifest_version": 2,

  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "version": "0.1",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "page_action": {
    "default_icon": {
      "19": "icon_128.png",
      "38": "icon_128.png"
    },
    "default_title": "__MSG_extName__",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.netflix.com/watch/*"],
      "js": ["vendor/jquery.js", "content_script.js"]
    }
  ],
  "web_accessible_resources": [
    "scenes/*.json"
  ],
  "icons": {
    "32": "icon_32.png",
    "64": "icon_64.png",
    "128": "icon_128.png"
  }
}
